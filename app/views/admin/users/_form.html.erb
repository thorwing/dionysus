<%= semantic_form_for  @user do |f| %>
    <%= f.inputs :name => "Basic" do %>
        <%= f.input :role, as: :select, :collection => Hash[User.roles.map{|r| [t("users.roles.#{r}"), r]}] %>
    <% end %>

    <fieldset class="actions">
        <%= f.submit t("general.confirm") %>
    </fieldset>
<% end %>
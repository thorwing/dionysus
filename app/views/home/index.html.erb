                        <%= link_to title, "" %><br/>
                      <% end %>
                  </div>
            </div>

            <div class="span5">
                <div>
                    <%= content_tag :h3, "酒趣轶事" %>
                    <ul class="thumbnails">
                        <% @hot_articles.each do |article| %>
                            <%= render article %>
                        <% end %>
                    </ul>
                </div>

                <div class="mt20">
                    <%= content_tag :h3, "热门酒评" %>
                    <ul class="thumbnails">
                        <% @hot_reviews.each do |review| %>
                            <%= render review %>
                        <% end %>
                    </ul>
                </div>

                <div class="mt20">
                    <%= content_tag :h3, "热门榜单" %>
                    <ul class="unstyled">
                        <% @hot_lists.each do |list| %>
                            <%= link_to list.title, list %><br/>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>

    </div>

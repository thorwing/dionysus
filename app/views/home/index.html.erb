<div class="row">
    <div class="span3">
        <div class="box box-shadow p10">
            <ul class="unstyled">
                <% %w(ChineseSpirits RiceWine ChineseLiquor).each do |category| %>
                    <li class="mt5 mb5">
                        <%= link_to t("beverages.categories.#{category}"), beverages_path(category: category), class: "jujiu-label" %>
                    </li>
                <% end %>

                <hr class="dotted"/>

                <% %w(Whisky Brandy Vodka Tequila Rum Gin Liquor).each do |category| %>
                    <li class="mt5 mb5">
                        <%= link_to t("beverages.categories.#{category}"), beverages_path(category: category), class: "jujiu-label" %>
                    </li>
                <% end %>

                <hr class="dotted"/>

                <% %w(Wine Beer Sake).each do |category| %>
                    <li class="mt5 mb5">
                        <%= link_to t("beverages.categories.#{category}"), "/#{category.downcase.pluralize}", class: "jujiu-label" %>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
    <div class="span9">
        <div class="hero-unit">
            <%= content_tag :h1, t("site.name") %>
            <%= content_tag :p, t("site.description") %>
            <p>
                <%= link_to "更多", '', class: "btn btn-primary btn-large" %>
            </p>
        </div>

        <ul class="thumbnails">
            <% 1.upto(6) do %>
                <li class="span3">
                    <div class="thumbnail">
                        <img data-src="holder.js/300x200" alt="">
                            <h3>Thumbnail label</h3>
                            <p>Thumbnail caption...</p>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>
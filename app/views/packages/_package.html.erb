<div class="clearfix" style="height: 400px;" xmlns="http://www.w3.org/1999/html">
    <div class="pull-left">
        <%= link_to image_tag(package.beverage.get_picture, class: "beverage-frame"), package.beverage %>
    </div>
    <div class="pull-left ml20" style="width: 300px;">
        <%= link_to package.beverage.full_name, package.beverage, class: "jujiu-label" %>
        <%= render "beverages/info", beverage: package.beverage %>
        <blockquote>
            <%= content_tag :q, package.remark if package.remark %>
        </blockquote><br/>
        <%= link_to t("general.remove"), package, method: :delete, confirm: t("general.are_you_sure_to_remove") if can? :destroy, package %>
    </div>
</div>

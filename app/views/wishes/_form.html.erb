<%= simple_form_for(wish) do |f| %>
    <%= f.error_notification %>

    <%= f.hidden_field :beverage_id %>
    <%= f.hidden_field :accomplished %>

    <%= render "tags/tags_form", f: f, tags: [] %>

    <%= f.input :remark, as: :text, label: t("wishes.remark"), input_html: {rows: 3, class: 'input-xlarge', maxlength: 140} %>
<% end %>

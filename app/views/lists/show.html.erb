<% title @list.title %>

<div class="span9">
    <% @list.packages.each do |package| %>
        <%= render package %>
        <hr/>
    <% end %>

    <div class="mt20">
        <%= render "comments/comments", item: @list %>
    </div>
</div>

<div class="span3">
    <%= render "users/author_block", item: @list %>

    <%= link_to t("general.edit"), edit_list_path(@list) if can? :update, @list %>
</div>


<% title t("lists.lists") %>

<div class="span9">
    <div class="clearfix">
        <%= link_to t("lists.add_list"), new_list_path, class: "pull-right" if can? :create, List %>
    </div>
    <% @lists.each do |list| %>
        <%= render list %>
        <hr/>
    <% end %>
</div>

<div class="span3">
    <div class="box box-shadow p10">
        <%= content_tag :span, "新榜单 · · · · · ·", class: "jujiu-label" %>

        <ul class="unstyled">
            <% @new_lists.each do |list| %>
                <%= render "lists/listed_list", list: list %>
            <% end %>
        </ul>
    </div>
</div>
<%= simple_form_for @list do |f| %>
    <%= f.input :title, label: t("lists.title"), input_html: {class: 'input-xlarge'} %>
    <%= f.input :description, label: t("lists.description"), input_html: {rows: '3', class: 'input-xxlarge'} %>

    <%= f.button :submit, f.object.new_record? ? t("general.confirm") : t("general.update"), class: 'btn btn-primary' %>
<% end %>
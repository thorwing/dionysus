<% title "编辑 #{resource_name.to_s.humanize}" %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true, label: t("authentication.email") %>
    <%= f.input :nick, :required => true, label: t("authentication.nick") %>
    <%= f.input :password, :autocomplete => "off", :hint => "留白，如果您不想修改密码", :required => false, label: t("authentication.password") %>
    <%= f.input :password_confirmation, :required => false, label: t("authentication.password_confirmation") %>
    <%= f.input :current_password, :hint => "我们需要您当前的密码来确认这次更新", :required => true, label: t("authentication.current_password") %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("general.update") %>
  </div>
<% end %>

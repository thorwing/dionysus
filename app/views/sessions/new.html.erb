<% title '登入'  %>

<div class="span7">
    <%= form_tag sessions_path, id: 'login_form' do %>
        <div>
            <%= label_tag :email, '邮箱地址', class: 'trivial' %>
            <%= email_field_tag :email, params[:email] %>
        </div>

        <div class="mt5">
            <%= label_tag :password, '密码', class: 'trivial' %>
            <%= password_field_tag :password, '' %>
        </div>

        <div class="mt10">
            <%= content_tag :label, check_box_tag('remember_me', 1, true) + '记住我', class: 'checkbox' %>
        </div>

        <div class="mt5">
            <%= submit_tag '登录', :class => "btn", id: 'loginBtn' %>
        </div>

    <% end %>
</div>

<div class="span5">
    <p>还没有帐号？<%= link_to '注册', sign_up_path %></p>
    <p><%= link_to t("authentication.forgot_password"), new_password_reset_path, id: 'resetPassword' %></p>

</div>

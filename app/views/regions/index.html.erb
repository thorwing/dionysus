<h1>Listing regions</h1>

<table>
  <tr>
    <th>名字</th>
    <th>上一级产区</th>
    <th></th>
  </tr>

<% @regions.each do |region| %>
  <tr>
    <td><%= link_to region.full_name, region %></td>
    <td><%= link_to region.parent.full_name, region.parent if region.parent %></td>
    <td><%= link_to 'Show', region %></td>
    <td><%= link_to 'Edit', edit_region_path(region) %></td>
    <td><%= link_to 'Destroy', region, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


<% title "酒评 - #{@review.title} - #{@review.beverage.full_name}", false %>

<div class="row">
    <div class="span9">
        <div class="clearfix">
            <div class="pull-left">
                <%= render "votes/vote_fields", item: @review %>
            </div>

            <div class="pull-left ml30 clearfix" style="width: 550px;">
                <div class="clearfix">
                    <%= content_tag :h1, @review.title, class: "pull-left" %>
                    <div class="pull-right text-center">
                        <%= user_avatar_tag(@review.author) %><br/>
                        <%= link_to @review.author.nick, @review.author %>
                    </div>
                    <%= content_tag :span, @review.score, class: "pull-right label label-info mr20" %>
                </div>

                <% if @review.up_votes > 0 %>
                    <div>
                        <% @review.votings.map(&:voter).each do |voter| %>
                            <%= link_to voter.nick, voter, class: "trivial mr2" %>
                        <% end %>
                        <%= content_tag :span, "等#{@review.up_votes}人赞同"  %>
                    </div>
                <% end %>

                <div class="clearfix mt10">
                    <ul class="unstyled pull-left">
                        <% %w(Nose Taste Finish Balance).each do |item| %>
                            <li class="mt5 mb5">
                                <%= content_tag :span, t("reviews.scores.#{item.downcase}"), class: "mr5" %>
                                <%= content_tag :span, "#{@review.send "#{item.downcase}_score".to_sym}/25 #{@review.send "#{item.downcase}_list".to_sym}", class: "trivial" %>
                            </li>
                        <% end %>
                        <li class="mt5 mb5">
                            <%= content_tag :span, t("reviews.foods"), class: "mr5" %>
                            <%= content_tag :span, @review.food_list, class: "trivial" %>
                        </li>
                    </ul>
                    <%= content_tag :div, "", id: "wheel", data: {flavors: @review.pieces.map{|p| {label: p.flavor, value: p.strength} }}, class: "pull-left ml30", style: "margin-top: -20px; width: 160px;height: 160px;" %>
                </div>

                <%= content_tag :p, @review.content, class: "mt20" %>
            </div>
        </div>

        <div>
            <%= link_to t("general.edit"), edit_review_path(@review) if can? :update, @review %>
        </div>

        <div class="mt20">
            <%= render "comments/comments", item: @review %>
        </div>
    </div>

    <div class="span3">
        <%= render "beverages/sidebar", beverage: @review.beverage %>
    </div>
</div>

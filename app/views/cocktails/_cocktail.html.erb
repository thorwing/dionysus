<div>
    <%= link_to cocktail.full_name, cocktail, class: "jujiu-label" %>
    <%= content_tag :span, "共#{cocktail.recipes.size}个配方", class: "trivial ml10" %>

    <div class="clearfix mt5">
        <% cocktail.recipes.limit(4).each do |recipe| %>
            <div class="pull-left mr10">
                <%= link_to image_tag(recipe.picture_url, class: "img-square-80"), recipe if recipe.picture?  %>
            </div>
        <% end %>
    </div>
</div>

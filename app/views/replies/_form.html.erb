<%= simple_form_for(@reply) do |f| %>
    <%= f.error_notification %>

    <%= f.hidden_field :topic_id %>
    <%= f.input :body, placeholder: "你的回应...", label: false, input_html: {class: "input-xxlarge", :rows =>6, :cols=> 53, :maxlength => 5000} %>

    <div class="mt10">
        <%= f.submit t("general.confirm"), class: "btn btn-primary" %>
        <%= link_to t("general.cancel"), @reply.topic, class: "btn ml10" %>
    </div>
<% end %>
